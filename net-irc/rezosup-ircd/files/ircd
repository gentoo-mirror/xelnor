#!/sbin/runscript

depend() {
	need net
}

start() {
	ebegin "Starting ircd"
    cd /var/run/ircd
	start-stop-daemon --start --quiet --exec /usr/sbin/ircd --chuid ircd:ircd -- -f /etc/ircd/ircd.conf -r /var/run/ircd
	eend $?
}

stop() {
	ebegin "Stopping ircd"
	start-stop-daemon --stop --quiet --pidfile /var/run/ircd/ircd.pid
	eend $?
}

